extends ../../../../templates/secret.pug

block content
    <link rel="stylesheet" href="/styles/guestform.css">

    <div class="container">
    <div class="jumbotron">
    <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
               
                a.button(class="btn btn-primary" href=`/admin/hotlines/addhotline` style="float:right; margin-right: 10px; font-family:'KG Broken Vessels Sketch Regular'") Add Hotline
                //- a.button(class="btn btn-primary" href=`/admin/hotlines/deleted` style="float:right; margin-right: 10px; font-family:'KG Broken Vessels Sketch Regular'; margin-top: 10px;") Show Deleted
            </div>
            </div>
    
    <table class="table table-striped table-hover">
            <thead>
            <tr>
            
            <th>LINE ID</th>
            <th>HOTLINE</th>
            <th>OWNER</th>

            <th>ACTIONS</th>
            
            
            </tr>
            </thead>
            <tbody>
                each hotline in hotlines
                    <tr>
                    td=hotline.line_id
                    td=hotline.line_number
                    td.text-uppercase=hotline.line_owner
                    td(style="display: flex; justify-content: center")
                        a.button(class="btn btn-sm btn-info" href=`/admin/hotlines/${hotline.line_id}/edit` style="float:right; margin-right:5px; font-family:'KG Broken Vessels Sketch Regular'") Edit
                        a.button(class="btn btn-sm btn-danger" href=`/admin/hotlines/${hotline.line_id}/delete` style="float:right; font-family:'KG Broken Vessels Sketch Regular'") Delete
                        
                    </tr>
                </table>
 
    </div>
    </div>
