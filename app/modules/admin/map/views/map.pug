extends ../../../../templates/secret

block content
	link(rel="stylesheet" href="/styles/guestform.css")
	.container
		.jumbotron
			.form-group
				.col-lg-10.col-lg-offset-2
					a.button(class="btn btn-primary" href="/admin/map/addhospital" style="float:right; margin-right: 10px; font-family:'KG Broken Vessels Sketch Regular'") Add location

			table.table.table-striped.table-hover
				thead
					th ID
					th HOSPITAL NAME
					th LATITUDE
					th LONGITUDE
					th ACTIONS
				tbody
					each location in map
						tr
							td=location.hospital_location_id
							td.text-uppercase=location.hospital_name
							td=location.latitude
							td=location.longitude
							td(style="display: flex; justify-content: center")
								a.button(class="btn btn-sm btn-info" href=`/admin/map/${location.hospital_location_id}/edit` style="float:right; margin-right:5px; font-family:'KG Broken Vessels Sketch Regular'") Edit
								a.button(class="btn btn-sm btn-danger" href=`/admin/map/${location.hospital_location_id}/delete` style="float:right; margin-right: 10px; font-family:'KG Broken Vessels Sketch Regular'") Delete
