extends ../../../../templates/secret
block content

    <link rel="stylesheet" href="/styles/guestform.css">
    <div class="container">
    <div class="jumbotron">
    form(class="form-horizontal" method='post' action=`/admin/map/${map.hospital_location_id}/edit`)
        
        <fieldset>
            //- each reservation in reservation
            <legend style="color: #e50000"> EDIT HOSPITAL </legend>
           

            <div class="form-group">
            <label for="inputName" class="col-lg-2 control-label">HOSPITAL:</label>
            <div class="col-lg-3">
                input#hospname(type="text" name="hospital_name" class="form-control" value= `${map.hospital_name}` required) 
            </div>
            </div>
            <div class="form-group">
            <label for="inputName" class="col-lg-2 control-label">LATITUDE:</label>
            <div class="col-lg-3">
                input( type="text" name="latitude" class="form-control" value=`${map.latitude}` required)
            </div>
            </div>
            <div class="form-group">
            <label for="inputName" class="col-lg-2 control-label">LONGITUDE:</label>
            <div class="col-lg-3">
                input( type="text" name="longitude" class="form-control" value=`${map.longitude}` required)
            </div>
            
            <div class="form-group">
                <div class="col-lg-10">
                    //- <button type="reset" class="btn btn-danger">Clear</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
            </div>

        </fieldset>
    </form>
    </div>
    </div>
    </div>