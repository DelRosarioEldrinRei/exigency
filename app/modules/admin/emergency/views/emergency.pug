extends ../../../../templates/secret.pug

block content
	link(rel='stylesheet' href='/styles/guestform.css')
	.container
		a.button(class="btn btn-primary" href=`/admin/emergency/addemergencycat` style="float:right; margin-right: 10px; font-family:'KG Broken Vessels Sketch Regular'; margin-top: 10px;") Add Emergency Category
		a.button(class="btn btn-primary" href=`/admin/emergency/deleted` style="float:right; margin-right: 10px; font-family:'KG Broken Vessels Sketch Regular'; margin-top: 10px;") Show Deleted
		.jumbotron
			.form-group
				.col-lg-10.col-lg-offset-2
			table.table.table-striped.table-hover
				thead
					th emergency ID
					th CATEGORY
					th ACTIONS
				tbody
					each emergency in emergencies
						- var name = `collapse${emergency.emergency_id}`
						- var name2 = `collapse2${emergency.emergency_id}`
						- var heading = `#heading${emergency.emergency_id}`
						- var heading2 = `#heading2${emergency.emergency_id}`
						tr 	
							td=emergency.emergency_id
							td=emergency.emergency_name
							
							
							td(style="display: flex; justify-content: center")
								a.button(class="btn btn-sm btn-primary" href=`/admin/emergency/${emergency.emergency_id}/view` style="float:right; margin-right: 5px; font-family:'KG Broken Vessels Sketch Regular'") View
								a.button(class="btn btn-sm btn-info" href=`/admin/emergency/${emergency.emergency_id}/edit` style="float:right; margin-right: 5px; font-family:'KG Broken Vessels Sketch Regular'") Edit 
								a.button(class="btn btn-sm btn-danger" href=`/admin/emergency/${emergency.emergency_id}/delete` style="float:right; font-family:'KG Broken Vessels Sketch Regular'") Delete
