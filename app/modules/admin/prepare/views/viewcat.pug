        form(class="form-horizontal" )

            <fieldset>
                    <div class="form-group">
                    <label for="inputName" class="col-lg-2 control-label">CATEGORY NAME:</label>
                    <div class="col-lg-3">
                        input(type="text" name="categoryname" disabled="disabled" class="form-control" value= `${prepare.cat_name}`) 
