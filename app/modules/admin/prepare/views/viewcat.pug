                        a.button(class="btn btn-primary" href=`/admin/prepare/${prepare.prepare_id}/${prepare.prepare_type_id}/edit` style="float:right; margin-right: 5px; font-family:'KG Broken Vessels Sketch Regular'") Edit

                    </div>
                    </div>

            </fieldset>
        </form>
    </div>
    </div>
