						|  Church
				ul.nav
					li.nav-item
						a.nav-link(href='/secretary')
							i.nc-icon.nc-chart-pie-35
							p Dashboard
					li
						a.nav-link(href='/secretary/services')
							i.nc-icon.nc-cart-simple
							p Services
					li
						a.nav-link(data-toggle="collapse" href="#events")
