		.main-panel
			//- Navbar
			nav.navbar.navbar-expand-lg.sticky-top
				.container-fluid
					a.navbar-brand(href='#pablo')  Dashboard 
					button.navbar-toggler.navbar-toggler-right(href='', type='button', data-toggle='collapse', aria-controls='navigation-index', aria-expanded='false', aria-label='Toggle navigation')
						i.nc-icon.nc-bullet-list-67
					#navigation.collapse.navbar-collapse.justify-content-end
						ul.nav.navbar-nav.mr-auto
							li.nav-item
								a.nav-link(href='#', data-toggle='dropdown')
									i.nc-icon.nc-palette
									span.d-lg-none Dashboard
							li.nav-item
								a.nav-link(href='#')
									i.nc-icon.nc-zoom-split
									span.d-lg-block  Search
						ul.navbar-nav.ml-auto
							li.nav-item
								a.nav-link(href='#pablo')
									span.no-icon Account
							li.nav-item.dropdown
								a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href='http://example.com', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
									span.no-icon Dropdown
