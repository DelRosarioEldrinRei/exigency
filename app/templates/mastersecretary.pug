							li.nav-item
								a.nav-link(href='/logout')
									span.no-icon Log out
			block main

			footer.footer
				.container
					nav
						ul.footer-menu
							li
								a(href='#')
									| Home
							li
								a(href='#')
									| Company
							li
								a(href='#')
									| Portfolio
							li
								a(href='#')
									| Blog
						p.copyright.text-center
							| ©
							script.
								document.write(new Date().getFullYear())
							a(href='#')  SAD Team
							| , Church Events & Facilities Management System
		.fixed-plugin
			.dropdown
				a(href='#', data-toggle='dropdown')
					i.fa.fa-cog.fa-2x  
				ul.dropdown-menu
					li.header-title  Sidebar Style
					li.adjustments-line
						a.switch-trigger(href='javascript:void(0)')
							p Background Image
							label.switch
								input(type='checkbox', data-toggle='switch', checked='', data-on-color='primary', data-off-color='primary')
								span.toggle
							.clearfix
					li.adjustments-line
						a.switch-trigger.background-color(href='javascript:void(0)')
							p Filters
							.pull-right
								span.badge.filter.badge-black(data-color='black')
								span.badge.filter.badge-azure(data-color='azure')
								span.badge.filter.badge-green(data-color='green')
								span.badge.filter.badge-orange(data-color='orange')
								span.badge.filter.badge-red(data-color='red')
								span.badge.filter.badge-purple.active(data-color='purple')
							.clearfix
					li.header-title Sidebar Images
					li.active
						a.img-holder.switch-trigger(href='javascript:void(0)')
							img(src='img/bg1.png', alt='')
					li
						a.img-holder.switch-trigger(href='javascript:void(0)')
							img(src='img/bg2.png', alt='')
					li
						a.img-holder.switch-trigger(href='javascript:void(0)')
							img(src='img/bg3.png', alt='')
