					li
						a(href='/admin/prepare')
							i.fa.fa-medkit(aria-hidden="true")
							|  PREPARE
					li
						a(href="/admin/map")
							i.fa.fa-map-marker(aria-hidden="true")
							|  MAP
					li
						a(href="/admin/hotlines")
							i.fa.fa-phone(aria-hidden="true")
							|  HOTLINES

				ul.nav.navbar-nav.navbar-right
					li
						a(href="/logout")
							span.fa.fa-power-off(aria-hidden='true')
							|  LOGOUT
	div.container
	block content

	script.
		$("#evtSweetalert").click(() => {
				swal({
					title: "Are you sure?",
					type: "warning",
					showCancelButton: true,
					confirmButtonColor: "#3085d6",
					cancelButtonColor: "#d33",
					confirmButtonText: "Yes, delete it!"
				})
		});