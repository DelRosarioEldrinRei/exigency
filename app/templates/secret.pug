				span.icon-bar
				span.icon-bar
				span.icon-bar
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				ul.nav.navbar-nav
					li
						a(href="/admin/emergency")
							i.fa.fa-ambulance(aria-hidden="true")
